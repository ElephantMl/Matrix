{
    "name": "elephant-ml/matrix",
    "authors": [
        {
            "name": "Polishchuk Dmitrii",
            "email": "polishuk1003@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.1",
        "squizlabs/php_codesniffer": "^3.5",
        "overtrue/phplint": "^2.2",
        "phpbench/phpbench": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Elephant\\Matrix\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elephant\\Matrix\\Tests\\": "tests/",
            "Elephant\\Matrix\\Benchmarks\\": "benchmarks/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html var/test/coverage"
    }
}
